# @see: http://editorconfig.org

root = true

[*] # 表示所有文件适用
charset = utf-8 # 设置文件字符集为 utf-8
end_of_line = lf # 控制换行类型(lf | cr | crlf)
indent_style = tab # 缩进风格（tab | space）
indent_size = 2 # 缩进大小
insert_final_newline = true # 文件末尾插入一个新行
trim_trailing_whitespace = true # 删除行末空格

[*.md] # 表示仅对 md 文件适用以下规则
insert_final_newline = false # 文件末尾不插入新行
trim_trailing_whitespace = false # 不删除行末空格

